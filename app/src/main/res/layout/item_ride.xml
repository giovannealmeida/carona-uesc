<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/profile_circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/ivProfile"
        android:layout_toRightOf="@id/ivProfile"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Alessandra Silva"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btGetRide"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:background="@color/colorButton"
                android:text="Entrar"
                android:textColor="@android:color/white"
                android:theme="@style/Widget.AppCompat.Button.Small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/ic_map_marker_radius"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_map_marker_radius"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Guarita" />

            <TextView
                android:id="@+id/tvAvailableSits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/ic_car_black"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_car_black"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/ic_crosshairs_gps"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_crosshairs_gps"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="N. Sra da Vitoria - IlhÃ©us" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/ic_clock"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="18:30" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>